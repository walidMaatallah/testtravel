<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/size_10"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="@dimen/size_8">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_car"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@android:color/white"
        android:clickable="true"
        android:focusable="true"
        android:padding="@dimen/size_16">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/car_make"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:textColor="@color/colorPrimary"
            android:gravity="start"
            android:text="Marque"
            app:layout_constraintEnd_toStartOf="@id/image"
            android:textSize="@dimen/text_size_18"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/car_year"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:gravity="start"
            android:paddingTop="@dimen/size_4"
            android:paddingStart="@dimen/size_8"
            android:text="AnnÃ©e"
            android:textSize="@dimen/text_size_16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/car_make"
            app:layout_constraintEnd_toStartOf="@id/image"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/equipement"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:gravity="start"
            android:layout_marginTop="@dimen/size_8"
            android:paddingStart="@dimen/size_8"
            android:text="Equipement"
            android:textSize="@dimen/text_size_16"
            android:textStyle="normal"
            android:textColor="#3A9245"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/car_year"
            app:layout_constraintEnd_toStartOf="@id/image"/>

        <ImageView
            android:id="@+id/image"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>